<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
              android:background="#292929"
              android:orientation="vertical"
             tools:context=".fragments.admin.ComplaintFragment">

    <LinearLayout android:orientation="horizontal"
                  android:layout_marginTop="10dp"
                  android:layout_width="wrap_content"
                  android:layout_gravity="center_horizontal"
                  android:rotationY="-1"
                  android:layout_height="wrap_content">

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Ник игрока:"
                  android:textSize="18sp"
                  android:textColor="#FFFFFF"
                  android:fontFamily="@font/minecraft"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:textColorHint="#8E8E8E"
                android:backgroundTint="#4A4A4A"
                android:textAlignment="center"
                android:id="@+id/nick"
                android:hint="введи ник"
                android:fontFamily="@font/minecraft"/>

    </LinearLayout>

    <LinearLayout android:orientation="horizontal"
                  android:layout_width="wrap_content"
                  android:layout_gravity="center_horizontal"
                  android:rotation="-1"
                  android:layout_height="wrap_content">

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Количество жалоб:"
                  android:textSize="18sp"
                  android:textColor="#FFFFFF"
                  android:fontFamily="@font/minecraft"/>

        <Spinner android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:entries="@array/count"
                 android:spinnerMode="dropdown"
                 android:id="@+id/count"
                 style="@style/Widget.AppCompat.Spinner.Underlined"
                 android:theme="@style/SpinnerStyle"/>

    </LinearLayout>

    <LinearLayout android:orientation="horizontal"
                  android:layout_width="wrap_content"
                  android:layout_gravity="center_horizontal"
                  android:rotationY="1"
                  android:layout_height="wrap_content">

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Причина:"
                  android:textSize="18sp"
                  android:textColor="#FFFFFF"
                  android:fontFamily="@font/minecraft"/>

        <Spinner android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:entries="@array/cause"
                 android:spinnerMode="dropdown"
                 android:id="@+id/cause"
                 style="@style/Widget.AppCompat.Spinner.Underlined"
                 android:theme="@style/SpinnerStyle"/>

    </LinearLayout>

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rotation="1"
            android:inputType="textPersonName"
            android:layout_gravity="center_horizontal"
            android:ems="12"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:textColorHint="#8E8E8E"
            android:backgroundTint="#4A4A4A"
            android:textAlignment="center"
            android:id="@+id/other"
            android:visibility="invisible"
            android:hint="другая причина"
            android:fontFamily="@font/minecraft"/>

    <Button
            android:text="выдать"
            android:textSize="17sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/minecraft"
            android:rotationY="1"
            android:visibility="invisible"
            android:clickable="false"
            android:id="@+id/give"/>

</LinearLayout>